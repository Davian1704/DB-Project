<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<header>
    <%- include('../partials/header'); %>
  </header>
<body class="container">
  <main>
    <div class="jumbotron">
      <h2>Authors Data</h2>
      <form action="/addAuthor" method="get" style="float:inline-end" target="addAuthor">
        <input type="submit" value="Add a author" >
      </form>
      <p>The following is the table with all the authors data</b>
      </p>
      <table width='80%' border=0>
 
        <tr style='text-align:left; background-color:maroon'>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>&emsp;Birthday</th>
        </tr>
        <% let i=0%>
        <% data.forEach(function(){ %>
            <tr>
                <td><%= data[i].Id %></td>
                <td><%= data[i].Name %></td>
                <td><%= data[i].Surname %></td>
                <td><%= data[i].Birthday %></td>
                <td>                          
                    <form action="/deleteAuthor" method="post">
                      <input type="submit" style="float:inline-end" value="Delete">  
                      <input type="hidden" style="float:right" id="id" name="id" value=<%= data[i].Id %>>
                    </form>
                </td>
            </tr>
            <% i++%>
        <% }) %>
        
    </table>
    <iframe name="addAuthor"></iframe>
    </div>
  </main>
</body>

</html>